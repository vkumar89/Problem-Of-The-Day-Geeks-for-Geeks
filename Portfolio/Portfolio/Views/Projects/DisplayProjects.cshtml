@model IEnumerable<Portfolio.Models.Project>

@{
    ViewBag.Title = "DisplayProjects";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/Site.css">
</head>

<div class="container">
    <div class="row d-flex justify-content-center align-items-center min-vh-100">
        @foreach (var projects in Model)
        {
            <div class="col-md-4 mb-4">
                <a href="@projects.ProjectLink" target="_blank" class="text-decoration-none fw-bold">
                    <div class="card">
                        <img src="~/Uploads/@projects.ProjectImage" class="card-img-top text-decoration-none fw-bold" alt="Card Image 1">
                        <div class="card-body">
                            <h5 class="card-title text-center">@projects.ProjectName</h5>
                        </div>
                    </div>
                </a>
            </div>
        }

    </div>
</div>