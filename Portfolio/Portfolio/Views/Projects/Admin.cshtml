@model IEnumerable<Portfolio.Models.Project>

@{
    ViewBag.Title = "Admin";
}

<h2>Admin</h2>
<p>
    <button class="btn btn-info link-light text-decoration-none">
        @Html.ActionLink("Create New", "AddProject", new { }, new { @class = "link-dark text-decoration-none fw-bold" })
    </button>
   
</p>

<div class="container">
    <div class="table-responsive">
        <table class="table table-striped table-success">
            <thead>
                <tr>
                    <th> @Html.DisplayNameFor(model => model.ProjectName)</th>
                    <th> @Html.DisplayNameFor(model => model.ProjectLink)</th>
                    <th> @Html.DisplayNameFor(model => model.ProjectImage)</th>
                    <th>Action Button</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.ProjectName)</td>
                        <td>@Html.DisplayFor(modelItem => item.ProjectLink)</td>
                        <td><img src="~/Uploads/@item.ProjectImage" class="img-fluid"width="100"height="100"/></td>
                        <td>

                            <button class="btn btn-warning">@Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "link-dark text-decoration-none fw-bold" })</button>

                            <button class="btn btn-danger">
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { onclick = "return confirm('Are you sure of deleting the record?')", @class = "link-dark text-decoration-none fw-bold" })
                            </button>

                        </td>
                        
                    </tr>

                }
                <!-- Additional rows can be added similarly -->
            </tbody>
        </table>
    </div>
</div>


